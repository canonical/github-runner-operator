server:
  disable: true

clients:
  - url: {{loki_endpoint}}

scrape_configs:
  - job_name: metrics
    loki_push_api:
      server:
        http_listen_address: 127.0.0.1
        http_listen_port: 3100
    pipeline_stages:
      - json:
          expressions:
            event: event
      - labels:
         event:
      - labelallow:
          - event
          - job
